<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tworcaquizow.StartQuizController">
    <!-- Top Bar: Login, Wyjdź, Wyloguj -->
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label prefHeight="26.0" prefWidth="607.0" style="-fx-font-size: 16px; -fx-text-fill: black;" text="Login" />
            <Button style="-fx-font-size: 16px; -fx-text-fill: black;" text="Wyjdź" />
            <Button style="-fx-font-size: 16px; -fx-text-fill: black;" text="Wyloguj" />
        </HBox>
    </top>
   <center>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Pane layoutX="157.0" layoutY="39.0" prefHeight="200.0" prefWidth="486.0">
               <children>
                  <TextArea fx:id="quizDesc" layoutY="57.0" prefHeight="144.0" prefWidth="485.0" text="Opis&#10;" wrapText="true">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextArea>
                  <Label fx:id="quizLabel" alignment="CENTER" layoutX="1.0" prefHeight="57.0" prefWidth="484.0" text="Tytuł Quizu">
                     <font>
                        <Font size="32.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <Label alignment="CENTER" layoutX="141.0" layoutY="289.0" prefHeight="62.0" prefWidth="532.0" text="Czy chcesz rozpocząć quiz">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" layoutX="250.0" layoutY="369.0" prefHeight="74.0" prefWidth="300.0" spacing="15.0">
               <children>
                  <Button layoutX="105.0" layoutY="48.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="141.0" text="Anuluj">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Button layoutX="153.0" layoutY="41.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="141.0" text="Tak">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </Pane>
   </center>
</BorderPane>
